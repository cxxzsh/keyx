{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/ninja-build/${presetName}",
      "cacheVariables": {
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      },
      "warnings": {
        "uninitialized": true
      }
    },
    {
      "name": "dev",
      "inherits": "base",
      "cacheVariables": {
        "KEYX_BUILD_TESTS": true
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dev-debug",
      "configurePreset": "dev",
      "configuration": "Debug"
    },
    {
      "name": "dev-release",
      "configurePreset": "dev",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "dev-default",
      "configurePreset": "dev",
      "execution": {
        "jobs": 4
      }
    }
  ]
}
